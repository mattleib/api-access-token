doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/blog.css')
    link(rel='stylesheet', href='css/my.css')
    title= title
    
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file:// 
    <!--[if lt IE 9]>
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    <![endif]-->
  body(ng-app)
    div.blog-masthead
      div.container
        nav.blog-nav
            if !authenticated
              a(role="presentation", class="blog-nav-item", href='signon') Login
            else
              a(role="presentation", class="blog-nav-item", href='signout') Logout (#{userid})
              if hasAuthorization
                a(role="presentation", class="blog-nav-item", href='refresh') Get new access token
                a(role="presentation", class="blog-nav-item", href='refresh?display=true') Copy access token for postman use
              a(role="presentation", class="blog-nav-item", href='removeme') Forget Me!
              a(role="presentation", class='blog-nav-item', href='#{consentPage}', target='_blank') Manage App Permissions

    if accessToken
    else
      div.container.blog-header
        h1 Request Access Tokens for Office APIs
        p.lead.blog-description Showcasing OpenID Connect for sign-on and OAuth2 code flow to retrieve access tokens
          
    div.container
      block content
      
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js')

    // Include all compiled plugins (below), or include individual files as needed
    script(src='js/bootstrap.min.js')
    script(src='js/popup.js')

